{
  "$schema": "https://json.schemastore.org/package",
  "name": "sourcedive",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "lint": "biome check",
    "format": "biome format --write",
    "lint:fix": "biome check --write --unsafe",
    "check-types": "turbo check-types"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "lefthook": "^1.12.2",
    "turbo": "^2.5.5"
  }
}
